{
  "compilerOptions": {
    "outDir": "build",
    "module": "es6",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src", "images.d.ts"],
  "exclude": ["node_modules", "build"]
}
